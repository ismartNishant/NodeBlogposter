<!doctype html>
<html lang="en">

<%- include("./partials/header.ejs") %>

    <body>
        <!-- navabr -->
        <%- include("./partials/navbar.ejs") %>

            <div class="container blogs content  ">
                <h1 class="">All Blogs</h1>
                <div class="d-flex  gap-3  justify-content-center m-auto flex-wrap mb-4 blog-box">
                    <% if (blogs.length> 0) { %>
                        <% blogs.forEach(blog=> { %>
                            <div class="shadow p-3  blog col-3">
                                <a class="single text-decoration-none" href="/blogs/<%= blog._id %>">
                                    <h3 class="title m-0">
                                        <%= blog.title %>
                                    </h3>
                                    <p class="snippet m-0">
                                        <%= blog.snippet %>
                                    </p>
                                </a>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <h1>There are no blogs to display</h1>
                                    <% } %>
                </div>
            </div>
            <%- include("./partials/footer.ejs") %>
                <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>

</html>